<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/appointement_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_12sdp"/>

            <TextView

                android:id="@+id/appointement_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="19"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textColor="#FFF"
                android:textSize="@dimen/_28sdp" />

            <TextView
                android:id="@+id/appointement_day_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="WED"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
             />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:maxLines="1"
                android:text="@string/specialization"
                android:textColor="#b8b8b8"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"


                android:layout_alignStart="@+id/voir_fiche_btn2"
                android:layout_marginTop="19dp"
                android:maxLines="1"
                android:text="@string/doctor"
                android:textColor="#b8b8b8"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/doctor_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="35dp"
                android:maxLines="1"
                android:text="5:00 PM"
                android:textColor="#555555"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_view_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="21dp"
                android:text="Hospitalisation"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_view_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_view_title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="6dp"
                android:text="@string/appointement_type"
                android:textColor="#b8b8b8"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/doctor_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_description"

                android:layout_alignStart="@+id/voir_fiche_btn2"
                android:layout_marginTop="-57dp"
                android:text="Doctor NAME"
                android:textColor="#555555"
                android:textSize="14sp" />

            <Button
                android:id="@+id/voir_fiche_btn2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/doctor_name2"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textAlignment="textStart"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@+id/text_view_description"
                android:textAllCaps="false"
                android:textSize="@dimen/_9sdp"
                android:text="@string/see_sheet" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>