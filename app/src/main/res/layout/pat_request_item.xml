<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/pat_request_item_image"
            android:layout_width="70dp"
            android:layout_height="77dp"
            app:srcCompat="@drawable/doctor"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/pat_request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_toEndOf="@+id/pat_request_item_image"
            android:textColor="#000000"
            android:maxLines="1"
            android:text="Title"
            android:layout_marginStart="@dimen/_5sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/pat_request_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pat_request_title"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/pat_request_item_image"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            android:text="@string/description" />

        <TextView
            android:id="@+id/onlineStatut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pat_request_description"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/pat_request_item_image"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="Online" />

        <Button
            android:id="@+id/pat_request_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="128dp"
            android:text="@string/accept"
            app:backgroundTint="#009688" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>